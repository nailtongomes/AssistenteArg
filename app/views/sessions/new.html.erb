<% provide(:title, t(:signin)) %>
<h1><%= t(:signin) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "E-Mail" %>
      <%= f.text_field :email %>

      <%= f.label :password, t('activerecord.attributes.user.password') %>
      <%= f.password_field :password %>

      <%= f.submit t(:signin), class: "btn btn-large btn-primary", :disable_with => t(:wait) %>
    <% end %>
	<hr/>
    <p> <%= t(:not_user)%> <%= link_to t(:signup), signup_path %>!</p>
    <%= link_to t(:recover), recover_url %>
  </div>
</div>