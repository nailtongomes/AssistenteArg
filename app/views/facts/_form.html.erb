<%= form_for(@fact) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= t(:data_fact) %>:
<%= f.text_area :content, :placeholder => t(:qst_factd), :rows => "5"%>
<%= t(:problem_fact) %>:
<%= f.text_area :problem, :placeholder => t(:qst_factp), :rows => "5"%>
<% if current_user.moderator? || current_user.admin? %>
<%= t(:orient_fact) %>:
<%= f.text_area :orientation, :placeholder => t(:qst_facto), :rows => "5"%>
<div class="span4">
	<%= t(:dti_fact) %>:<br/>	
	<div class="span2">
	<%= f.text_field :ini_term_date, :class => 'datepicker', :size => 10, :maxlength => 10 %>
	</div>
	<div class="span1 pull-right">
	<%= f.text_field :ini_term_time, :size => 5, :maxlength => 5 %>
	</div>
</div>
<div class="span4 pull-right">
	<%= t(:dtf_fact) %>:<br/>	
	<div class="span2">
	<%= f.text_field :fin_term_date, :class => 'datepicker', :size => 10, :maxlength => 10 %>
	</div>
	<div class="span1 pull-right">
	<%= f.text_field :fin_term_time, :size => 5, :maxlength => 5 %>
	</div>
</div>
<% end %>
<div class="span10">
	<hr/>
	<div class="pull-right">
		<% if current_user.admin? %>
		Ativo? <%= f.check_box :active %>
		<% end %>
		<%= f.hidden_field(:user_id, :value => current_user.id ) %>

		<%= f.submit t(:save), class: "btn btn-large btn-primary", :disable_with => t(:wait) %>
	</div>
	<% end %>
</div>
