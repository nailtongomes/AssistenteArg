<div id="myModal" class="modal hide fade">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t(:new) %></h3>
  </div>
  <div class="modal-body">
    <%= form_for(@fact) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<div class="field">
			<%= f.text_area :content, :placeholder => t(:desc_fact) %>
			<%= f.text_area :problem, :placeholder => t(:desc_prob) %>
		</div>
  </div>
  <div class="modal-footer">
    <%= f.submit t(:create), class: "btn btn-large btn-primary", :disable_with => t(:wait) %>
    <% end %>   
  </div>
</div>
