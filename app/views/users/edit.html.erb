<% provide(:title, t(:profile)) %> <h1><%= t(:profile) %></h1>
<hr/>
<div class="row">
	<div class="span10">
		<div class="span5 pull-right">
			<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name, :maxlength => 40 %>

			<%= f.label :email %>
			<%= f.email_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
			<p><%= t(:lang) %></p>
            <%= f.select :lang, options_for_select([['PortuguÃªs (PT-BR)', "pt-BR"], ['English (EN)', "en"]], @user.lang) %>
			<%= t(:show_fact) %>  
			<%= f.check_box :show_fact %><br/>			
			<%= t(:show_editor) %>
			<%= f.check_box :show_html %>
			<hr/>			
			<%= f.submit t(:update), class: "btn btn-large btn-primary", :disable_with => t(:wait) %>			
			<% end %>
		</div>
		<div class="span3 offset1">
			<%= gravatar_for(@user, :size => 200) %>
		</div>
		<div class="span3 offset1" align="center">
			<hr/>
			<a href="http://gravatar.com/emails" target="_blank" class="btn btn-info"><%= t(:update) %></a>
		</div>
	</div>
</div>