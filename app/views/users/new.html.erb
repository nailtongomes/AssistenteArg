<% provide(:title, t(:signup)) %> 

<h1><%= t(:signup)%></h1>

<div class="row">
	<div class="span6 offset3">

		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= render 'fields', f: f %>
		<%= f.submit t(:create), class: "btn btn-large btn-primary", :disable_with => t(:wait) %>
		<% end %>
	</div>
</div>