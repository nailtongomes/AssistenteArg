<span itemscope itemtype="http://schema.org/SoftwareApplication">
	<header class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<%= link_to "[ ARG ]", root_path(:locale => I18n.locale), id: "logo" %>
				<nav>
					<ul class="nav pull-right">
						<li>
							<%= link_to t('activerecord.models.scheme.other').upcase, schemes_path %>
						</li>
						<% if signed_in? %>
						<li>
							<%= link_to t(:guide).upcase, sandargs_path %>
						</li>
						<% end %>
						<li>
							<%= link_to t(:search).upcase, arguments_path %>
						</li>
						<% if signed_in? %>
						<li>
							<%= link_to t('activerecord.models.fact.other').upcase, facts_path %>
						</li>
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-user icon-white"></i> <%= current_user.name %> <b class="caret"></b> </a>
							<ul class="dropdown-menu">
								<li>
									<%= link_to t(:profile), current_user %>

								</li>
								<li>
									<%= link_to t(:msgs), msgs_path %>
								</li>
								<li>
									<%= link_to t(:docs), documents_path %>
								</li>
								<li>
									<%= link_to t(:draft), sandargs_path %>
								</li>
								<li>
									<%= link_to t(:config), edit_user_path(current_user) %>
								</li>
								<li>
									<%= link_to t(:signout), signout_path, method: "delete" %>
								</li>
							</ul>
						</li>
						<li>
							<%= link_to t('activerecord.models.user.other').upcase, users_path %>
						</li>
						<% else %>
						<li>
							<%= link_to t('activerecord.models.document.other').upcase, documents_path %>
						</li>
						<li>
							<%= link_to t(:signin).upcase, signin_path %>
						</li>
						<% end %>
						<li>
							<%= link_to t(:help).upcase, help_path %>
						</li>
						<% if signed_in? && current_user.admin? %>
						<li>
							<a href="<%= pages_path %>"> <i class="icon-edit icon-white"></i></a>
						</li>
						<% end %>
					</ul>
				</nav>
			</div>
		</div>
	</header>